#
# Program specific bindings
#

super + Return
	urxvt

# super + {shift +,_} e
# 	google-chrome-stable {, --incognito}


super + {shift +,_} e
    google-chrome-stable {--incognito, }

# program launcher
# super + space
# 	dmenu_run -fn lato:size=13 -x 50 -w 700 -y 50 -lh 50

super + space
	rofi -xoffset 10 \
         -yoffset 25 \
         -width 25 \
         -lines 4 \
         -location 1 \
         -font "Lato Regular 14" \
         -show run

super + u
     notify-send "a $BAR_REFRESH"

super + backslash
    setxkbmap {us, ru} && \
    bar-refresh

#
# receptacles !
#

# murder receptacles
super + F1
    kill-receptacles.sh


# receptacles
super + period
    bspc node -i


# make kxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

#
# capture
#
super + {_,shift +} b
    bspc rule -a URxvt -o "state=floating" \
            "monitor=last" \
            "" && \
        urxvt -geometry 80x4 -e sloppy {--no-mouse, }

super + {_, shift +} v
    maimy {--clipboard, }

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
# super + m
# 	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# ROTATE LAYOUT
#

super + equal
    bspc node @/ -R 90

super + minus
    bspc node @/ -R 270

#
# state/flags
#

# set the window state
super + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}

super + f
    bspc node -t fullscreen -l above

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}; \
    bar-refresh

# side clicks of the wheel change desktops
# just kidding, this annoys the shit out of me
# ~button{6,7}
#     bspc desktop -f {prev,next}


# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'; \
    bar-refresh

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

super + KP_Subtract
    bspc config window_gap $(($(bspc config window_gap) + 4))

super + KP_Add
    bspc config window_gap $(($(bspc config window_gap) - 4))

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

#
# pointer focus/move/resize
#

# focus
~button1
	bspc node pointed -f

# start move/resize
super + button{1,3}
	; bspc node pointed -g {move,resize_side}

# super + button2
#     ; urxvt
    # ; bspc node -c

# end move/resize
super + @button{1,3}
	bspc node pointed -f


# media keys
# XF86AudioRaiseVolume
#     pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
#
# ¯\_(ツ)_/¯
#

super + @KP_End
    sleep 0.6 && xdotool type --clearmodifiers --delay 50 ' ¯\_(ツ)_/¯'

super + @KP_Down
    sleep 0.6 && xdotool type --clearmodifiers --delay 50 '( ͡° ͜ʖ ͡°)'

super + @KP_Next
    sleep 0.6 && xdotool type --clearmodifiers --delay 50 '(˵ ͡° ͜ʖ ͡°˵)'
