#!/bin/sh
MONITOR_TO_TOGGLE="HDMI-0"
MONITOR_TO_KEEP="DP-4"

multihead() {
  xrandr --output "$MONITOR_TO_TOGGLE" --auto --left-of "$MONITOR_TO_KEEP"
  sh ~/.config/bspwm/bspwmrc
}

dualhead() {
  xrandr --output "$MONITOR_TO_TOGGLE" --off

  sh ~/.config/bspwm/bspwmrc
}

print_help() {
  cat <<EOF
monitorctl <arg>
<no arg>  print help
dual      two monitors
multi     multihead monitor
EOF
}

main() {
  local arg
  arg=$1

  if [ "$arg" = "dual" ]; then
    dualhead
  elif [ "$arg" = "multi" ]; then
    multihead
  else
    print_help
  fi
}

main $@
